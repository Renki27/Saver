<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_initial_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firecaster.saver.InitialConfiguration">


    <ScrollView
        android:id="@+id/sv_initialConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_margin="5dp"
                    android:text="@string/daily"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View style="@style/Divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_breakfast"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/breakfast" />

                <TextView
                    android:id="@+id/tv_c1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_launch"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/launch" />

                <TextView
                    android:id="@+id/tv_c2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_dinner"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/dinner" />

                <TextView
                    android:id="@+id/tv_c3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_transportation"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/transportation" />

                <TextView
                    android:id="@+id/tv_c4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_margin="5dp"
                    android:text="@string/monthly"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View style="@style/Divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_internet"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/internet" />

                <TextView
                    android:id="@+id/tv_c5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/internet_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_add" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Water"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/water" />

                <TextView
                    android:id="@+id/tv_c6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt6"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/water_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/electricity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Electricity"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/electricity" />

                <TextView
                    android:id="@+id/tv_c7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt7"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/electricity_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/renting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_Renting"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="@string/renting" />

                <TextView
                    android:id="@+id/tv_c8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5" />

                <EditText
                    android:id="@+id/txt8"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/renting_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_add" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_save_user_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/save" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

